public class Solution {
    public int MinAddToMakeValid(string s) {
        Stack st = new Stack();
        char[] arr = s.ToCharArray();
        int count = 0;
        for(int i=0; i< arr.Length; i++){
            if(arr[i] == '('){
                st.Push(arr[i]);
            }
            else if(st.Count == 0){
                count++;
            }
            else {
                st.Pop();
            }
        }
        count += st.Count;
        return count;
    }
}
